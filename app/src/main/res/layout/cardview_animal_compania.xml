<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvAnimalCompania"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/imgvFotoAnimalCompania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/perro1"
            android:padding="@dimen/padding_imagen"
            android:background="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_hueso"
            android:background="@drawable/borde_negro">

            <ImageView
                android:id="@+id/imgvHuesoBlanco"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/huesoblanco"/>

            <TextView
                android:id="@+id/txtvNombre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_hueso"
                android:text="Perro 1"
                android:textSize="@dimen/tamano_letra_card"
                android:gravity="center_vertical"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtvLikes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="@dimen/tamano_letra_card"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_left_likes"
                android:paddingRight="@dimen/padding_right_likes"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/imgvHuesoAmarillo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/huesoamarillo"
                android:paddingRight="@dimen/padding_hueso"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>